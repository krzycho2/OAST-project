<Window x:Class="Mm1Sim.ChartMaker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mm1Sim"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" 
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="ChartMaker" Height="450" Width="800">
    <Grid>
        <DVC:Chart Name="ChartData">
            <DVC:Chart.Series>
                <DVC:ScatterSeries Title="Punkty" 
                    IndependentValueBinding="{Binding Path=X}"
                    DependentValueBinding="{Binding Path=Y}"/>
            </DVC:Chart.Series>
        </DVC:Chart>
    </Grid>
</Window>
